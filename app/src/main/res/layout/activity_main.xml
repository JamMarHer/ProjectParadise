<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/main_fab_switch_fragments"
        android:layout_width="60dp"
        android:layout_height="39dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/circle_less_alpha"
        android:clickable="true"
        android:elevation="1dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:src="@drawable/baseline_explore_black_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/main_fab_share_wave_scan_qr"
        android:layout_width="60dp"
        android:layout_height="39dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/circle_less_alpha"
        android:clickable="true"
        android:elevation="1dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:src="@drawable/ic_share_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_fab_switch_fragments" />

    <ImageView
        android:id="@+id/main_fab_add_wave_post"
        android:layout_width="60dp"
        android:layout_height="39dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="9dp"
        android:background="@drawable/circle_less_alpha"
        android:clickable="true"
        android:elevation="1dp"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_fab_switch_fragments" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <include
            android:id="@+id/main_page_toolbar"
            layout="@layout/app_bar_layout_main" />


    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#e90d0e10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>