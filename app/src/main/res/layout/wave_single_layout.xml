<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wave_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/colorWhite"
    android:elevation="1dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/wave_name_single_layout"
        app:layout_constraintTop_toBottomOf="@+id/wave_name_single_layout"
        app:srcCompat="@drawable/ic_people_black_24dp" />

    <ImageView
        android:id="@+id/wave_join"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/circle_holder_main_color"
        android:src="@drawable/baseline_radio_button_unchecked_white_36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wave_settings"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/circle_holder_main_colors"
        android:src="@drawable/baseline_waves_white_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave_join" />

    <ImageView
        android:id="@+id/wave_notification"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/circle_holder_gray"
        android:src="@drawable/outline_notifications_white_48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wave_trending_single_layout"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        android:background="@drawable/circle_holder_gray"
        android:src="@drawable/ic_trending_flat_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_wave_single_layout"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/icon_sad"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wave_notification"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wave_name_single_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/profile_wave_single_layout"
        app:layout_constraintTop_toTopOf="@+id/profile_wave_single_layout" />

    <TextView
        android:id="@+id/wave_attending_single_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/wave_name_single_layout" />

</android.support.constraint.ConstraintLayout>