<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/nothing_to_show_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:srcCompat="@drawable/nothing_to_show" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/highlighted_posts_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinned_waves_recyclerView" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pinned_waves_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_3"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:elevation="1dp">

        <LinearLayout
            android:id="@+id/linearLayout42"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle"
            android:elevation="1dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@+id/heats">

            <ImageView
                android:id="@+id/textView99"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:src="@drawable/ic_people_black_24dp" />

            <TextView
                android:id="@+id/numberContacts"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="0"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personal_username" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture_personal"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_face_black_48dp"
            app:civ_border_color="@color/common_google_signin_btn_text_light_default"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edit_profile"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/edit_profile"
            android:layout_width="27dp"
            android:layout_height="0dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/circle"
            android:clickable="true"
            android:elevation="2dp"
            android:src="@drawable/baseline_edit_black_24"
            app:layout_constraintBottom_toBottomOf="@+id/profile_picture_personal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profile_picture_personal" />

        <TextView
            android:id="@+id/personal_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|end"
            android:text="TextView"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/pinnedWaves"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/personal_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|start"
            android:maxLength="60"
            android:text="lacking status..."
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/personal_username"
            app:layout_constraintTop_toBottomOf="@+id/personal_username" />

        <LinearLayout
            android:id="@+id/heats"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle"
            android:elevation="1dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout42"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/pinnedWaves"
            app:layout_constraintTop_toTopOf="@+id/pinnedWaves">

            <ImageView
                android:id="@+id/textView9"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:src="@drawable/heart_like" />

            <TextView
                android:id="@+id/numberVerified"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="0"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/personal_username" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pinnedWaves"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/circle"
            android:clickable="true"
            android:elevation="1dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_personal"
            app:layout_constraintTop_toBottomOf="@+id/personal_status">

            <ImageView
                android:id="@+id/textView2"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:elevation="1dp"
                android:src="@drawable/baseline_waves_black_48" />

            <TextView
                android:id="@+id/numberWaves"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:foregroundGravity="right|center_vertical"
                android:gravity="center|end"
                android:text="0"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>