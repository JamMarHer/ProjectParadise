<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toTopOf="@+id/navigation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle_holder_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hostcard"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/hostcard_launch_button"
                        android:layout_width="145dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        android:fontFamily="@font/lobster_regular"
                        android:gravity="center"
                        android:onClick="createEvent"
                        android:text="Host"
                        android:textColor="@color/colorGray"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/hostcard_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:singleLine="false"
                        android:text="Start hosting an event with iDae, this will allow you to register, configure, and run your event!"
                        android:textColor="@color/colorGray" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/joincard"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/joincard_launch_button"
                        android:layout_width="145dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle"
                        android:fontFamily="@font/lobster_regular"
                        android:onClick="joinEvent"
                        android:text="Join"
                        android:textColor="@color/colorGray"
                        android:textSize="24sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="9dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/joincard_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:singleLine="false"
                        android:text="Look for what events are in your location and join the community, vote for music, shares and much more!"
                        android:textColor="@color/colorGray" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>