<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp">

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="#27000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/wave_post_comment_message"
        app:layout_constraintStart_toStartOf="@+id/wave_post_comment_message"
        app:layout_constraintTop_toBottomOf="@+id/wave_post_comment_message" />

    <TextView
        android:id="@+id/wave_post_comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/wave_post_comment_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/wave_post_comment_thumbnail" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/wave_post_comment_thumbnail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/baseline_person_black_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wave_post_comment_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        android:foregroundGravity="left"
        android:gravity="left"
        android:paddingLeft="3dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/wave_post_comment_username"
        app:layout_constraintTop_toBottomOf="@+id/wave_post_comment_username" />

</android.support.constraint.ConstraintLayout>