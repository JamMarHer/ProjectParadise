<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toTopOf="@+id/navigation">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_main_colors">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/current_wave_thumbnail"
                android:layout_width="33dp"
                android:layout_height="0dp"
                android:layout_marginStart="1dp"
                android:src="@drawable/waves_low"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/current_wave"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="3dp"
                android:text="TextView"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/current_wave_thumbnail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/current_wave_thumbnail"
                app:layout_constraintTop_toTopOf="@+id/current_wave_thumbnail" />
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/waveAddPostShow"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/circle_holder_second_main_color"
            android:clickable="true"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_add_circle_outline_white_36" />

    </android.support.constraint.ConstraintLayout>

    <paradise.ccclxix.projectparadise.utils.VerticalViewPager
        android:id="@+id/wave_post_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

</android.support.constraint.ConstraintLayout>