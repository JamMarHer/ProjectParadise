<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="360dp">

    <TextView
        android:id="@+id/wave_post_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:foregroundGravity="left"
        android:gravity="start"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/wave_post_time"
        app:layout_constraintEnd_toEndOf="@+id/wave_post_time"
        app:layout_constraintStart_toStartOf="@+id/wave_post_username"
        app:layout_constraintTop_toBottomOf="@+id/wave_post_username" />

    <TextView
        android:id="@+id/wave_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/wave_post_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:maxHeight="250dp"
        android:maxWidth="250dp"
        app:layout_constraintBottom_toTopOf="@+id/wave_post_time"
        app:layout_constraintEnd_toEndOf="@+id/wave_post_time"
        app:layout_constraintStart_toStartOf="@+id/wave_post_username"
        app:layout_constraintTop_toBottomOf="@+id/wave_post_username"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/wave_post_thumbnail"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/icon_sad"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wave_post_username"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/wave_post_thumbnail"
        app:layout_constraintStart_toEndOf="@+id/wave_post_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/wave_post_thumbnail" />

</android.support.constraint.ConstraintLayout>