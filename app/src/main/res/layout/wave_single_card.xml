<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/circle">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_wave_thumbnail"
        android:layout_width="33dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:src="@drawable/waves_low"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wave_single_card_name"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="3dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/main_wave_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_wave_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/main_wave_thumbnail" />
</android.support.constraint.ConstraintLayout>