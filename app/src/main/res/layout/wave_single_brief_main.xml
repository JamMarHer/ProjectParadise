<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wave_single_brief_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp">

    <ImageView
        android:id="@+id/wave_single_brief_source"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/youtube_icon"
        app:layout_constraintBottom_toBottomOf="@+id/wave_single_brief_launch_main"
        app:layout_constraintEnd_toStartOf="@+id/wave_single_brief_launch_main"
        app:layout_constraintTop_toTopOf="@+id/wave_single_brief_launch_main" />

    <ImageView
        android:id="@+id/main_comment_post"
        android:layout_width="45dp"
        android:layout_height="39dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_holder_gray"
        android:elevation="1dp"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/baseline_add_comment_white_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_echo_post" />

    <ImageView
        android:id="@+id/main_echo_post"
        android:layout_width="45dp"
        android:layout_height="39dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_holder_gray"
        android:elevation="1dp"
        android:src="@drawable/baseline_panorama_fish_eye_white_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave_single_brief_message_main" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/wave_single_brief_wave_thumbnail_main"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/waves_low"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/wave_single_brief_launch_main"
        android:layout_width="66dp"
        android:layout_height="33dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/circle"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_launch_black_24" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation=".5dp"
        android:foregroundGravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave_single_brief_message_main">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left|center_vertical|start"
            android:foregroundGravity="left"
            android:src="@drawable/baseline_lens_white_24" />

        <TextView
            android:id="@+id/wave_single_brief_echos_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:text="12"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="@+id/wave_post_echo"
            app:layout_constraintTop_toTopOf="@+id/wave_post_echo"
            tools:layout_editor_absoluteX="56dp" />

        <ImageView
            android:id="@+id/wave_post_view_comments"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21dp"
            android:src="@drawable/baseline_comment_white_2" />

        <TextView
            android:id="@+id/wave_single_brief_comments_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:text="6"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="@+id/wave_post_open_comments"
            app:layout_constraintTop_toTopOf="@+id/wave_post_open_comments"
            tools:layout_editor_absoluteX="140dp" />

        <ImageView
            android:id="@+id/wave_post_time_to_live_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21dp"
            android:elevation="1dp"
            android:foregroundGravity="center_vertical"
            android:src="@drawable/baseline_timelapse_white_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/wave_single_brief_launch_main" />

        <TextView
            android:id="@+id/wave_single_brief_time_to_live_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:elevation="1dp"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="6"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="@+id/wave_post_open_comments"
            app:layout_constraintStart_toEndOf="@+id/wave_post_time_to_live_icon"
            app:layout_constraintTop_toTopOf="@+id/wave_post_open_comments" />
    </LinearLayout>

    <TextView
        android:id="@+id/wave_single_brief_name_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="1dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/wave_single_brief_wave_thumbnail_main"
        app:layout_constraintStart_toEndOf="@+id/wave_single_brief_wave_thumbnail_main"
        app:layout_constraintTop_toTopOf="@+id/wave_single_brief_wave_thumbnail_main" />

    <ImageView
        android:id="@+id/wave_post_image_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave_single_brief_launch_main" />

    <TextView
        android:id="@+id/wave_single_brief_message_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:elevation="3dp"
        android:maxLines="6"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textIsSelectable="true"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave_post_image_main" />
</android.support.constraint.ConstraintLayout>