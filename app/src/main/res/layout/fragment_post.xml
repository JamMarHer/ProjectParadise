<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    android:background="@android:color/background_light"
    android:elevation="1dp">

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/wave_post_time"
        app:layout_constraintStart_toStartOf="@+id/wave_post_time"
        app:layout_constraintTop_toBottomOf="@+id/wave_post_num_comments" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="6dp"
        android:layout_height="9dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/wave_post_echo"
        app:layout_constraintStart_toEndOf="@+id/wave_post_num_echos"
        app:layout_constraintTop_toTopOf="@+id/wave_post_echo"
        app:srcCompat="@drawable/circle_holder_main_colors" />

    <TextView
        android:id="@+id/wave_post_num_comments"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        android:elevation="1dp"
        android:gravity="center_vertical"
        android:text="6"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="@+id/wave_post_open_comments"
        app:layout_constraintStart_toEndOf="@+id/wave_post_open_comments"
        app:layout_constraintTop_toTopOf="@+id/wave_post_open_comments" />

    <TextView
        android:id="@+id/wave_post_num_echos"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="3dp"
        android:elevation="1dp"
        android:gravity="center_vertical"
        android:text="12"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="@+id/wave_post_echo"
        app:layout_constraintStart_toEndOf="@+id/wave_post_echo"
        app:layout_constraintTop_toTopOf="@+id/wave_post_echo" />

    <ImageView
        android:id="@+id/wave_post_echo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle"
        android:elevation="1dp"
        android:src="@drawable/baseline_panorama_fish_eye_black_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/wave_post_open_comments"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle"
        android:elevation="1dp"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/baseline_add_comment_black_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

    <TextView
        android:id="@+id/wave_post_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="3dp"
        android:foregroundGravity="left"
        android:gravity="start"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/wave_post_username"
        app:layout_constraintTop_toBottomOf="@+id/wave_post_username" />

    <TextView
        android:id="@+id/wave_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:elevation="1dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wave_post_num_comments" />

    <ImageView
        android:id="@+id/wave_post_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:elevation="0dp"
        android:maxHeight="250dp"
        android:maxWidth="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave_post_message" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/wave_post_thumbnail"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/icon_sad"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wave_post_username"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/wave_post_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/wave_post_thumbnail" />

</android.support.constraint.ConstraintLayout>